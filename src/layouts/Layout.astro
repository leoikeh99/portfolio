---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Leonard Ikeh Portfolio",
  image = "/images/profilepic.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script src="../index.js"></script>
  </body>
</html>
<style is:global>
  :root {
    --clr-primary-400: #d43f52;
    --clr-primary-500: #a3293d;
    --clr-neutral-100: #ffffff;
    --clr-neutral-300: #999999;
    --clr-neutral-700: #1a1a1a;
    --clr-neutral-900: #000000;

    --bg-main: var(--clr-neutral-900);
    --bg-secondary: var(--clr-neutral-700);

    --text-clr-main: var(--clr-neutral-100);
    --text-clr-secondary: var(--clr-neutral-300);

    --fs-sm: 0.8125rem;
    --fs-base: 1rem;
    --fs-lg: 1.5rem;
    --fs-xl: 1.875rem;
    --fs-2xl: 2rem;
    --fs-3xl: 2.1875rem;

    --fw-regular: 400;
    --fw-medium: 500;
    --fw-semi-bold: 600;
    --fw-bold: 700;

    --ff-sans: "Raleway", sans-serif;

    --fs-heading: var(--fs-2xl);
    --fs-sub-heading: var(--fs-xl);
    --fs-text: var(--fs-base);
    --fs-text-sm: var(--fs-sm);
  }

  .heading {
    font-size: var(--fs-heading);
    font-weight: var(--fw-bold);
  }

  .sub-heading {
    font-size: var(--fs-sub-heading);
    font-weight: var(--fw-bold);
  }

  .section-heading {
    font-size: var(--fs-3xl);
    font-weight: var(--fw-bold);
    color: var(--clr-neutral-100);
    margin-bottom: 2.5rem;
  }

  .text {
    font-size: var(--fs-text);
    font-weight: var(--fw-regular);
  }

  .text-sm {
    font-size: var(--fs-text-sm);
    font-weight: var(--fw-regular);
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    border: 0;
    padding: 0;

    white-space: nowrap;
    clip-path: inset(100%);
    clip: rect(0 0 0 0);
    overflow: hidden;
  }

  /* Box sizing rules */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1;
  }

  /* Remove default margin */
  * {
    margin: 0;
    padding: 0;
    font: inherit;
  }

  /* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
  ul[role="list"],
  ol[role="list"] {
    list-style: none;
  }

  /* Set core root defaults */
  html:focus-within {
    scroll-behavior: smooth;
  }

  html,
  body {
    scroll-behavior: smooth;
    height: 100%;
  }

  /* Set core body defaults */
  body {
    text-rendering: optimizeSpeed;
    line-height: 1.5;
    font-family: var(--ff-sans);
  }

  /* A elements that don't have a class get default styles */
  a:not([class]) {
    text-decoration-skip-ink: auto;
  }

  /* Make images easier to work with */
  img,
  picture,
  svg {
    max-width: 100%;
    display: block;
  }

  a {
    text-decoration: none;
  }

  /* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
  @media (prefers-reduced-motion: reduce) {
    html:focus-within {
      scroll-behavior: auto;
    }

    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
