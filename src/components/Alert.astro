<style>
  .alert {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    width: 100%;
    padding: 12px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
    border-radius: 8px;
    box-shadow: 0px 0px 5px -3px #111;
  }

  .alert.hidden {
    display: none;
  }

  .error {
    background: #fce8db;
    border: 1px solid #ef665b;
    color: #71192f;
  }

  .error .alert-icon path {
    fill: #ef665b;
  }

  .success {
    background: #d4f5e6;
    border: 1px solid #1dbf73;
    color: #1dbf73;
  }

  .success .alert-icon path {
    fill: #1dbf73;
  }

  .alert-icon {
    width: 20px;
    height: 20px;
    transform: translateY(-2px);
    margin-right: 8px;
  }

  .alert-title {
    font-weight: 500;
    font-size: 14px;
  }

  .close-button {
    cursor: pointer;
    margin-left: auto;
    border: none;
    background: none;
  }
</style>
